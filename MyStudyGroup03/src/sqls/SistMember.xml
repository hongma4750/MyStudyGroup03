<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  
  <mapper namespace="SistMember">
  	
  	<select id="login" parameterType="sist.co.Model.SistMemberVO" resultType="sist.co.Model.SistMemberVO">
  		SELECT * FROM sistmember WHERE M_ID = #{m_id} AND M_PW = #{m_pw}
  	</select>

  	<select id="getID" parameterType="sist.co.Model.SistMemberVO" 	resultType="int">
  		SELECT NVL(COUNT(*), 0) FROM SISTMEMBER WHERE M_ID = #{m_id}
  	</select>
  	
  	<insert id="insertMember" parameterType="sist.co.Model.SistMemberVO">
  		INSERT INTO SISTMEMBER VALUES (#{m_id},#{m_pw},#{m_nickname},
  			#{m_name},#{m_gender},#{m_birth},#{m_postal},#{m_address},#{m_marketing},#{m_email},#{m_phone},0)
  	</insert>
  	
  	<update id="updateActionMember" parameterType="sist.co.Model.SistMemberVO">
  		UPDATE SISTMEMBER SET M_ACTION = 1 WHERE M_ID = #{m_id}
  	</update>
  	
  	
  	
  </mapper>

